<% layout("/layouts/boilerplate") %> 

<body>
  <div class="container mt-4">
    <h3 class="mb-4">All Listings</h3>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4 justify-content-start">
      <% for (let listing of allListings) { %>
        <div class="col">
          <div class="card h-100">
            <a href="/listings/<%= listing._id %>" class="listing_link">
              <img 
                src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1625505826533-5c80aca7d157?...' %>" 
                class="card-img-top img-fluid"
                alt="listing_image"
                style="object-fit: cover; height: 16rem;" 
              />
            </a>

            <div class="card-body d-flex flex-column justify-content-between">
              <p class="card-text mb-0">
                <b><%= listing.title %><br /></b>
                <% if (listing.price != null) { %>
                  &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                <% } else { %>
                  <span>Price not available</span>
                <% } %>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
