<% layout("/layouts/boilerplate") %>

<body>
  <h3>All Listings</h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2">
    <% for (let listing of allListings) { %>
      <div class="card col" style="width: 20rem;">
        <a href="/listings/<%= listing._id %>" class="listing_link">
          <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1625505826533-5c80aca7d157?...' %>" 
               class="card-img-top" 
               alt="listing_image" 
               style="height: 20rem" />
        </a>
        
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %><br /></b>
            <% if (listing.price != null) { %>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
            <% } else { %>
              <span>Price not available</span>
            <% } %>
          </p>
        </div>
      </div>
    <% } %>
  </div>
</body>

